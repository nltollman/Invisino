<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.invisino.invisino.ViewMyExisitingNotes">

    <Button
        android:id="@+id/button5"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="8dp"
        android:background="@drawable/back_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <ImageView
        android:id="@+id/app_header_logo"
        android:layout_width="368dp"
        android:layout_height="50dp"
        android:src="@drawable/icon"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/app_header_title"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:text="My Exisiting Notes"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="66dp" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="400dp"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/app_header_title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">

            <!--Beginning of individual note section-->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/noteDate1"
                    android:layout_width="230dp"
                    android:layout_height="30dp"
                    android:text="Posted: 09/05/17 16:30:32"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="140dp" />

                <Button
                    android:id="@+id/editButton1"
                    style="?android:textAppearanceSmall"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@color/colorPrimary"
                    android:text="Edit"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="300"
                    tools:layout_editor_absoluteY="140dp" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/noteMessage1"
                    android:layout_width="230dp"
                    android:layout_height="30dp"
                    android:text="Look at this cool note I made!"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="170" />

                <Button
                    android:id="@+id/deleteButton1"
                    style="?android:textAppearanceSmall"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@color/colorPrimary"
                    android:text="Delete"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="300"
                    tools:layout_editor_absoluteY="170" />
            </LinearLayout>
            <!--End of individual note section-->


            <!--Start: Need a 10dp space, horizontal separator, and another 10dp space-->
            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <View
                android:layout_width="330dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />
            <!--End: Need a 10dp space, horizontal separator, and another 10dp space-->


            <!--Beginning of individual note section-->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/noteDate2"
                    android:layout_width="230dp"
                    android:layout_height="30dp"
                    android:text="Posted: 09/05/17 16:35:46"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="140dp" />

                <Button
                    android:id="@+id/editButton2"
                    style="?android:textAppearanceSmall"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@color/colorPrimary"
                    android:text="Edit"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="300"
                    tools:layout_editor_absoluteY="140dp" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/noteMessage2"
                    android:layout_width="230dp"
                    android:layout_height="30dp"
                    android:text="This note is also mine!"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="170" />

                <Button
                    android:id="@+id/deleteButton2"
                    style="?android:textAppearanceSmall"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@color/colorPrimary"
                    android:text="Delete"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="300"
                    tools:layout_editor_absoluteY="170" />
            </LinearLayout>

            <!--Start: Need a 10dp space, horizontal separator, and another 10dp space-->
            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <View
                android:layout_width="330dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />
            <!--End: Need a 10dp space, horizontal separator, and another 10dp space-->


        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
